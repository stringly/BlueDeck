@model BlueDeck.Models.Enums.Gender

<div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 formContainer">
    <div class="formHeader">
        <h4 class="formHeader-heading"><strong>Edit Gender</strong></h4>
        <p class="formHeader-description">
            Editing details for "@Model.GenderFullName"
        </p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit" asp-route-returnUrl="@ViewBag.ReturnUrl" asp-route-id="@Model.GenderId">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="GenderId" />
                <div class="row">
                    <div class="col-md-5 form-group">
                        <label asp-for="GenderFullName" class="control-label"></label>
                        <input asp-for="GenderFullName" class="form-control" />
                        <span asp-validation-for="GenderFullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 form-group">
                        <label asp-for="Abbreviation" class="control-label"></label>
                        <input asp-for="Abbreviation" class="form-control" />
                        <span asp-validation-for="Abbreviation" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <a href="@ViewBag.ReturnUrl" class="btn btn-default">Cancel</a>
                    <a asp-action="Edit" asp-route-id="@Model.GenderId" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-warning">Reset</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Delete" asp-route-id="@Model.GenderId" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-danger pull-right">Delete</a>
                </div>
            </form>
        </div>
    </div>
</div>
