@model BlueDeck.Models.Enums.AppStatus

<div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 formContainer">
    <div class="formHeader">
        <h4 class="formHeader-heading"><strong>Create Account Status</strong></h4>
        <p class="formHeader-description">
            Provide the details below to create a new Account Status.
        </p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AppStatusId" />
                <div class="form-group">
                    <label asp-for="StatusName" class="control-label"></label>
                    <input asp-for="StatusName" class="form-control" />
                    <span asp-validation-for="StatusName" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <a href="@ViewBag.ReturnUrl" class="btn btn-default">Cancel</a>
                    <input type="submit" value="Save" class="btn btn-primary" />                        
                </div>
            </form>
        </div>
    </div>
</div>



