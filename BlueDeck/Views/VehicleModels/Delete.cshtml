@model BlueDeck.Models.Enums.VehicleModel

@{
    bool canDelete = Model.Vehicles.Count() > 0 ? false : true;
}

<div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 formContainer">
    @if (ViewBag.Status == "Warning!")
    {
        <div class="alert alert-danger">
            <strong>@ViewBag.Status</strong> @ViewBag.Message
        </div>
    }
    <div class="formHeader">
        <h2 class="formHeader-heading">Confirm Delete</h2>
        @if (canDelete)
        {
            <p class="formHeader-description">
                Are you certain that you want to delete @Model.VehicleModelName? This action cannot be undone.
            </p>
        }
        else
        {
            <p class="formHeader-description">
                There are @Model.Vehicles.Count() vehicle in the database that are assigned this model. You cannot delete a manufacturer with active vehicles.
            </p>
        }
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3 form-group">
                        @Html.LabelFor(model => model.VehicleModelId, new { @class = "control-label" })<br />
                        @Html.DisplayFor(model => model.VehicleModelId, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="col-md-5 form-group">
                        @Html.LabelFor(model => model.VehicleModelName, new { @class = "control-label" })<br />
                        @Html.DisplayFor(model => model.VehicleModelName, new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12 form-group">
                        <form asp-action="Delete" asp-route-returnUrl="@ViewBag.ReturnUrl">
                            <input type="hidden" asp-for="VehicleModelId" />
                            <a href="@ViewBag.ReturnUrl" class="btn btn-default">Cancel</a>
                            <a asp-action="Edit" asp-route-id="@Model.VehicleModelId" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-primary">Edit</a>
                            @if (canDelete)
                            {
                                <input type="submit" value="Delete" class="btn btn-danger pull-right" />
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

