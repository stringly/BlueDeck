@model AddEditVehicleModelViewModel

<div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 formContainer">
    <div class="formHeader">
        <h4 class="formHeader-heading"><strong>Edit Vehicle Model</strong></h4>
        <p class="formHeader-description">
            Editign details for "@Model.VehicleModelName"
        </p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VehicleModelId" />
                <div class="row">
                    <div class="col-md-5 form-group">
                        <label asp-for="VehicleModelName" class="control-label"></label>
                        <input asp-for="VehicleModelName" class="form-control" />
                        <span asp-validation-for="VehicleModelName" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 form-group">
                        <label asp-for="ManufacturerId" class="control-label"></label>
                        @Html.DropDownListFor(model => model.ManufacturerId,
                            new SelectList(Model.Manufacturers, "VehicleManufacturerId", "VehicleManufacturerName"),
                            "Choose Manufacturer",
                            new { @class = "form-control" })
                        <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <a href="@ViewBag.ReturnUrl" class="btn btn-default">Cancel</a>
                    <a asp-action="Edit" asp-route-id="@Model.VehicleModelId" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-warning">Reset</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Delete" asp-route-id="@Model.VehicleModelId" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-danger pull-right">Delete</a>
                </div>
            </form>
        </div>
    </div>
</div>
