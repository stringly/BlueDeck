@model BlueDeck.Models.Enums.DutyStatus

<div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 formContainer">
    <div class="formHeader">
        <h2 class="formHeader-heading">Duty Status: <strong>@Model.DutyStatusName</strong></h2>
        <p class="formHeader-description">
            Editing Duty Status Details
        </p>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="col-md-12">
                <form asp-action="Edit" asp-route-returnUrl="@ViewBag.ReturnUrl" asp-route-id="@Model.DutyStatusId">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DutyStatusId" />
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label asp-for="DutyStatusName" class="control-label"></label>
                            <input asp-for="DutyStatusName" class="form-control" />
                            <span asp-validation-for="DutyStatusName" class="text-danger"></span>
                        </div>
                        <div class="col-md-2 form-group">
                            <label asp-for="Abbreviation" class="control-label"></label>
                            <input asp-for="Abbreviation" class="form-control" />
                            <span asp-validation-for="Abbreviation" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-10 form-group" style="margin-bottom:0px">
                            <div class="form-checkbox">
                                <label>
                                    <input asp-for="HasPolicePower" /> @Html.DisplayNameFor(model => model.HasPolicePower)
                                </label>
                                <span class="note">
                                    Status has police power.
                                </span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <a href="@ViewBag.ReturnUrl" class="btn btn-default">Cancel</a>
                            <a asp-action="Edit" asp-route-id="@Model.DutyStatusId" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-warning">Reset</a>
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Delete" asp-route-id="@Model.DutyStatusId" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-danger pull-right">Delete</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>