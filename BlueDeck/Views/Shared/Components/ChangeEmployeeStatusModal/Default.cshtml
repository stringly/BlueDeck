@model ChangeEmployeeStatusModalViewComponentViewModel

<div class="modal fade" id="changeEmployeeStatusModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" data-target="#changeEmployeeStatusModal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>

                    </button>
                    <h4 class="modal-title" id="changeEmployeeStatusModalLabel">Reassign @Model.Member.GetTitleName()</h4>
                </div>

                <form asp-action="ChangeEmployeeStatus" id="changeEmployeeStatusModalForm">
                    <div class="modal-body">
                        <h6 class="text-danger" id="warning">@ViewBag.Message</h6>
                        @Html.HiddenFor(model => model.MemberId)
                        @Html.HiddenFor(model => model.Member.DutyStatus.DutyStatusId)
                        @Html.LabelFor(model => model.DutyStatus)
                        @Html.DropDownListFor(model => model.DutyStatus,
                                                    new SelectList(Model.StatusList, "MemberDutyStatusId", "MemberDutyStatusName"),
                                                    "Select Duty Status",
                                                    new { @class = "form-control" })
                        @Html.HiddenFor(model => model.ParentComponentId)
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" data-target="#changeEmployeeStatusModal">Close</button>
                    <button type="button" id="changeEmployeeStatusModalSubmit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>