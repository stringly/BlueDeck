@model IEnumerable<BlueDeck.Models.Enums.Rank>

<div class="container" style="padding-top:10px; padding-bottom:10px">
    <a asp-action="Create" asp-controller="Rank" asp-route-returnUrl="/Admin/RankIndex"><i class="glyphicon glyphicon-plus"></i>Create a New Rank</a>
</div>
<div>
    @if (ViewBag.Status == "Success!")
    {
        <div class="indexAlertWrapper">
            <div class="alert alert-success alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Success!</strong>
                <span>@ViewBag.Message</span>
            </div>
        </div>

    }
    @if (Model.Count() > 0)
    {
        <div class="table-responsive">
            <table class="table indexTable table-condensed">
                <thead>
                    <tr>
                        <th>
                            Full Name
                        </th>
                        <th style="text-align:center">
                            RaceId
                        </th>
                        <th>
                            Short
                        </th>
                        <th>
                            Pay Grade
                        </th>
                        <th style="text-align:center">
                            Sworn
                        </th>
                        <th style="text-align:center">
                            Members in Rank
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.RankFullName
                            </td>
                            <td style="text-align:center">
                                @item.RankId
                            </td>
                            <td>
                                @item.RankShort
                            </td>
                            <td>
                                @item.PayGrade
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.IsSworn)
                            </td>
                            <td style="text-align:center">
                                @item.Members.Count()
                            </td>
                            <td style="text-align:center">
                                <a asp-action="Details" asp-controller="Rank" asp-route-id="@item.RankId" asp-route-returnUrl="/Admin/RankIndex" title="View Details" class="glyphicon-ring">
                                    <span class="glyphicon glyphicon-list-alt glyphicon-bordered"></span>
                                </a>
                                <a asp-action="Edit" asp-controller="Rank" asp-route-id="@item.RankId" asp-route-returnUrl="/Admin/RankIndex" title="Edit Race" class="glyphicon-ring">
                                    <span class="glyphicon glyphicon-pencil glyphicon-bordered"></span>
                                </a>
                                <a asp-action="Delete" asp-controller="Rank" asp-route-id="@item.RankId" asp-route-returnUrl="/Admin/RankIndex" title="Delete Race" class="glyphicon-ring">
                                    <span class="glyphicon glyphicon-trash glyphicon-bordered"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    }
</div>

<script>
    // close any alert after 3 seconds
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 3000);
</script>
