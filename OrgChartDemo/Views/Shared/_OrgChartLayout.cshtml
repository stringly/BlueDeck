<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link href="~/lib/getorgchart/css/getorgchart.css" rel="stylesheet" />
    <link asp-href-include="lib/bootstrap/css/*.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/getorgchart/js/getorgchart.js"></script>
    <style type="text/css">
        html, body {
            margin: 0px;
            padding: 0px;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        #people {
            width: 100%;
            height: 100%;
        }

        .get-org-chart rect.get-box {
            fill: lightgrey;
            stroke: #D9D9D9;
        }

        .get-org-chart .get-text.get-text-0 {
            fill: #262626;
            font-weight: bold;
        }

        .get-org-chart .get-text.get-text-1 {
            fill: #262626;
            font-weight:bold;
        }

        .get-org-chart .get-text.get-text-2 {
            fill: #788687;
        }
        .get-org-chart .get-text.get-text-3 {
            fill: #0000EE;
        }
        .get-green.get-org-chart {
            background-color: #f2f2f2;
        }

        .more-info {
            fill: #18879B;
        }

        .btn path {
            fill: #F8F8F8;
            stroke: #D9D9D9;
        }

        .btn {
            cursor: pointer;
        }

            .btn circle {
                fill: darkgrey;

            }
            .btn line {
                stroke-width: 3px;
                stroke: #ffffff;
            }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">Org Chart Demo</a>
    </div>
    <div class="row-panel">
        <div id="categories" class="col-xs-1">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
    </div>
    <div class="col-xs-11">
        <h3 class="text-danger">@ViewBag.Message</h3>
        @RenderBody()
    </div>
</body>
</html>
