@model AssignMemberModalViewComponentViewModel

<div class="modal fade" id="assignMemberModal" tabindex="-1" role="dialog" aria-labelledby="assignMemberModalLabel" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" data-target="#assignMemberModal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>

                    </button>
                    <h4 class="modal-title" id="assignMemberModalLabel">Assign a Member to @Model.Position.Name</h4>
                </div>

                <form asp-action="ReassignMember" id="assignMemberModalForm">
                    <div class="modal-body">
                        <h6 class="text-danger" id="warning">@ViewBag.Message</h6>
                        @Html.HiddenFor(model => model.PositionId)                        
                        @Html.LabelFor(model => model.MemberId)
                        @Html.DropDownListFor(model => model.MemberId,
                                                    new SelectList(Model.Members, "MemberId", "MemberName"),
                                                    "Select a Member",
                                                    new { @class = "form-control" })
                        @Html.HiddenFor(model => model.SelectedComponentId)
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" data-target="#assignMemberModal">Close</button>
                    <button type="button" id="assignMemberModalSubmit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>