@model OrgChartDemo.Models.Component


<div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 formContainer">
    <div class="formHeader">
        <h2 class="formHeader-heading">@Model.Name</h2>
        <p class="formHeader-description">
            Showing Component details
        </p>
        <div>
            <a asp-action="Index"><i class="ion-md-arrow-round-back"></i> Back to List</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-5 form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="col-md-3 form-group">
                        @Html.LabelFor(model => model.Acronym, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Acronym, new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-5 form-group">
                        @Html.LabelFor(model => model.ParentComponent.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.ParentComponent.Name, new { @class = "form-control", disabled = "disabled" })
                    </div>                        
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12 form-group pull-left">
                        <a asp-action="Index" class="btn btn-default">Cancel</a>                        
                        <a asp-action="Edit" asp-route-id="@Model.ComponentId" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.ComponentId" class="btn btn-danger pull-right">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


